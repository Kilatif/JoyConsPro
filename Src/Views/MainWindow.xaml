<Window x:Class="JoyConsPro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyConsPro"
        xmlns:controls="clr-namespace:JoyConsPro.Src.Views"
        mc:Ignorable="d"
        Title="[Joy-Cons] Pro" Height="370.868" Width="769.492" Background="#FFDADADA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="468*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="5,26,5,211" Grid.RowSpan="2"/>
        <controls:ControllersStatusView x:Name="StatusView" Grid.Column="1" Grid.RowSpan="2"/>
        <Label x:Name="label" Content="Left Joy-Con name" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="74,27,0,0" VerticalAlignment="Top" Width="84" Maximum="4" SmallChange="1" Value="-1" Foreground="Black" Height="30" RenderTransformOrigin="0.08,0.517" TickPlacement="BottomRight" Grid.Row="1"/>
        <Label x:Name="label1" Content="Sensitivity :" HorizontalAlignment="Left" Margin="5,22,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <CheckBox x:Name="checkBox" Content="Main" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" Margin="10,0" VerticalAlignment="Top" Grid.Row="1">
            <ComboBoxItem Content="Default" IsSelected="True"/>
            <ComboBoxItem Content="Sensitivity +/-"/>
            <ComboBoxItem Content="Sensitivity -/+"/>
            <ComboBoxItem Content="Sensitivity value"/>
        </ComboBox>
        <Label x:Name="label1_Copy" Content="SL/SR bind :" HorizontalAlignment="Left" Margin="5,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.253,0.379" Height="24" Grid.RowSpan="2"/>
        <Label x:Name="label1_Copy1" Content="Battery :" HorizontalAlignment="Left" Margin="83,28,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy2" Content="full" HorizontalAlignment="Left" Margin="132,28,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
