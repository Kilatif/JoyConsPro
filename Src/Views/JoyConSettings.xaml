<UserControl x:Class="JoyConsPro.Src.Views.JoyConSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoyConsPro.Src.Views"
             mc:Ignorable="d">
    <Grid>
        <Label x:Name="LabelType" Grid.Column="0" Content="Right : " VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="LabelName" Grid.Column="0" Content="Name" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="47,0,0,0" Width="175"/>
        <Border BorderBrush="Black" Grid.Column="0" BorderThickness="1" Margin="0,26,0,0">
            <Grid>
                <Label Content="Battery :" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0" Margin="5,5,0,0"/>
                <Label x:Name="LabelBatteryLvl" Content="full" HorizontalAlignment="Left" Margin="53,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.231,0.615" Padding="0"/>
                <Label Content="Gyro sens level :" HorizontalAlignment="Left" Margin="86,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.348,0.154" Padding="0"/>
                <ComboBox x:Name="ComboBoxSensLevel" Margin="178,2,8,0" VerticalAlignment="Top" Height="22">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                </ComboBox>
                <Label Content="SL/SR bind :" HorizontalAlignment="Left" Margin="5,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.253,0.379" Padding="0"/>
                <ComboBox x:Name="ComboBoxBindType" Margin="73,28,8,0" VerticalAlignment="Top" Height="22">
                    <ComboBoxItem Content="Default" IsSelected="True"/>
                    <ComboBoxItem Content="Sensitivity +/-"/>
                    <ComboBoxItem Content="Sensitivity -/+"/>
                    <ComboBoxItem Content="Sensitivity value"/>
                </ComboBox>
                <Label Content="SL value :" HorizontalAlignment="Left" Margin="5,58,0,0" VerticalAlignment="Top" Padding="0" Grid.IsSharedSizeScope="True"/>
                <ComboBox x:Name="ComboBoxSlSensVal" HorizontalAlignment="Left" Margin="73,55,0,0" VerticalAlignment="Top" Width="35" Height="22">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                </ComboBox>
                <CheckBox x:Name="CheckBoxSlHold" Content="Hold to enable" HorizontalAlignment="Left" Margin="113,59,0,0" VerticalAlignment="Top"/>
                <Label Content="SR value :" HorizontalAlignment="Left" Margin="5,80,0,11" Padding="0" Grid.IsSharedSizeScope="True"/>
                <ComboBox x:Name="ComboBoxSrSensVal" HorizontalAlignment="Left" Margin="73,77,0,0" Width="35" Padding="6,3,5,5" Height="24" VerticalAlignment="Top">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                </ComboBox>
                <CheckBox x:Name="CheckBoxSrHold" Content="Hold to enable" HorizontalAlignment="Left" Margin="113,81,0,11"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
